# Neon Postgres connection string — https://neon.tech (Dashboard → Connection string)
DATABASE_URL=postgresql://user:password@ep-xxx-pooler.region.aws.neon.tech/neondb?sslmode=require

# AI provider: "mock" (local dev, no API key) or "openrouter" (real AI)
# Use mock for local development; openrouter for production or when testing AI.
AI_PROVIDER=mock

# OpenRouter API key — https://openrouter.ai/keys
# Required only when AI_PROVIDER=openrouter. Optional when AI_PROVIDER=mock.
OPENROUTER_API_KEY=sk-or-...

# OpenRouter attribution headers (required by OpenRouter TOS)
OPENROUTER_SITE_URL=https://frame-mirror.app
OPENROUTER_SITE_NAME=Frame + Mirror

# Feature flags
ENABLE_MIRROR=true
ENABLE_AI=true

# Upstash Redis for rate limiting — https://upstash.com (free tier)
# Leave blank to disable rate limiting (development)
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Secret for Vercel Cron requests (set in Vercel dashboard)
CRON_SECRET=your-cron-secret
